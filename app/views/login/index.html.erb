<div class='container container1'>
<div class='row row1'>        
    <%= video_tag("Cloud_Surf.mp4", :id => "video-background", :autoplay => true, :loop => true, poster: "Cloud_Surf.jpg") %>
    <div class='col-sm-6'>
        <h1 class='text-primary'> Welcome to Event Manager </h1>
        <div class='text-center'>
            <p> Plan, schedule and organize - Participate and get involved</p>
        </div>
    </div>
    <div class='col-sm-4'>
    <h3> LOG IN </h3>
    <form method='post' action='/create'>
        <% if flash[:sign_in] %>
            <p class='text-danger'><%= flash[:sign_in] %></p>
        <% end %>
        <input type='hidden' name="form_value" value='sign_in'>
        <input type='hidden' name="authenticity_token" value='<%= form_authenticity_token %>'>
        <div class="form-group <%= flash[:has_Error] %>">
        <label for='email'>Email:</label>
        <input class="form-control"  type='text' name='email' placeholder='abc@xyz.com'>
        </div>
        <div class="form-group <%= flash[:has_Error] %>">
        <label for='password'>Password:</label>
        <input class="form-control"  type='password' name='password' placeholder=''>
        </div>
        <div class="form-group text-center">
        <input class="btn btn-primary" type='submit' value='Login'>
        </div>
    </form>
    <p>Not registered? <a href="/register">Register</a></p>
</div>
</div>
</div>